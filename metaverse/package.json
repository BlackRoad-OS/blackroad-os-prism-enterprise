{
  "name": "@blackroad/metaverse",
  "version": "1.0.0",
  "description": "Earth replica metaverse with agent integration for BlackRoad Prism Console",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch agent-world-api.ts",
    "build": "tsc",
    "start": "node dist/agent-world-api.js",
    "start:prod": "NODE_ENV=production node dist/agent-world-api.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t blackroad-metaverse:latest .",
    "docker:run": "docker run -p 8080:8080 -p 8081:8081 blackroad-metaverse:latest",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/"
  },
  "keywords": [
    "metaverse",
    "earth",
    "3d",
    "agents",
    "unity",
    "threejs",
    "websocket",
    "rest-api"
  ],
  "author": "BlackRoad Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "jsonwebtoken": "^9.0.2",
    "three": "^0.161.0",
    "@react-three/fiber": "^8.15.18",
    "@react-three/drei": "^9.111.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "typescript": "^5.5.4",
    "tsx": "^4.7.0",
    "vitest": "^1.6.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
