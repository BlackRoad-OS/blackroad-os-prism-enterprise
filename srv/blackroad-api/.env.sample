# Sample environment for BlackRoad API
PORT=4000
SESSION_SECRET=change_me           # cookie-session secret
DB_PATH=/srv/blackroad-api/blackroad.db
LLM_URL=http://127.0.0.1:8000/chat
ALLOW_SHELL=false                  # enable /api/exec
ALLOW_ORIGINS=                     # comma-separated list
INTERNAL_TOKEN=change_me           # internal auth token
BILLING_DISABLE=false
TRUTH_TOPIC=truth.garden/v1/announce   # PubSub topic for signed Truth messages
IPFS_API=http://127.0.0.1:5001         # IPFS HTTP API endpoint
TRUTH_DIR=/srv/truth                   # Directory for Truth feed files
TRUTH_MAX_AGE_SEC=604800               # Reject messages older than this many seconds
TRUTH_ALLOW_DIDS=                      # Optional comma-separated allowlist of did:key senders
TRUTH_DEVICE_API_URL=http://127.0.0.1:4000 # Device API base URL for LED nudges
