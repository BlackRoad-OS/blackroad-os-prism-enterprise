# ============================================================================
# BlackRoad Prism Console - Production Environment Configuration
# ============================================================================
# SECURITY NOTICE: Never commit this file with real secrets!
# Copy this to .env on your production server and update with real values
# Generate secrets: openssl rand -base64 32
# ============================================================================

# ----------------------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------------------
NODE_ENV=production
PORT=8000
APP_VERSION=1.0.0
SERVICE_NAME=blackroad-prism-console
LOG_LEVEL=info

# ----------------------------------------------------------------------------
# Session & Security
# ----------------------------------------------------------------------------
# CRITICAL: Change these to cryptographically random values
SESSION_SECRET=CHANGE_ME_TO_RANDOM_STRING_openssl_rand_base64_32
INTERNAL_TOKEN=CHANGE_ME_TO_RANDOM_TOKEN_openssl_rand_base64_32
JWT_SECRET=CHANGE_ME_TO_RANDOM_JWT_SECRET_openssl_rand_base64_32

# CORS Configuration
ALLOW_ORIGINS=https://blackroad.io,https://www.blackroad.io,https://blackroadinc.us

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
# SQLite (Development/Small Scale)
DB_PATH=/app/data/blackroad.db

# PostgreSQL (Production - Recommended)
# DATABASE_URL=postgresql://user:password@localhost:5432/blackroad
# DB_POOL_MIN=2
# DB_POOL_MAX=10
# DB_SSL=true

# ----------------------------------------------------------------------------
# Service URLs (Internal Docker Network or Service Mesh)
# ----------------------------------------------------------------------------
LLM_URL=http://llm-gateway:4000
MATH_ENGINE_URL=http://api:4000/math
QUANTUM_LAB_URL=http://quantum-lab:8003
LUCIDIA_API_URL=http://lucidia-api:5000
ERROR_LOGGER_URL=http://error-logger:8001

# ----------------------------------------------------------------------------
# Observability & Monitoring
# ----------------------------------------------------------------------------
# Prometheus/Grafana
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
ALERTMANAGER_URL=http://alertmanager:9093

# Sentry Error Tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=production
# SENTRY_TRACES_SAMPLE_RATE=0.1

# Logging
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/blackroad
LOG_RETENTION_DAYS=30

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
ALLOW_SHELL=false
ENABLE_AGENT_SWARM=true
ENABLE_QUANTUM_LAB=true
ENABLE_SACRED_GEOMETRY=true

# ----------------------------------------------------------------------------
# Agent Swarm Configuration
# ----------------------------------------------------------------------------
AGENT_COUNT=1000
DEFAULT_FORMATION=HALO
MESSAGE_BUS_TYPE=redis

# ----------------------------------------------------------------------------
# Redis (Message Bus & Caching)
# ----------------------------------------------------------------------------
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password
# REDIS_TLS=true

# ----------------------------------------------------------------------------
# Authentication (OIDC)
# ----------------------------------------------------------------------------
# OIDC_ISSUER=https://your-oidc-provider.com
# OIDC_CLIENT_ID=your-client-id
# OIDC_CLIENT_SECRET=your-client-secret
# OIDC_CALLBACK_URL=https://blackroad.io/auth/callback

# Local Development Token (DISABLE IN PRODUCTION)
# LOCAL_DEV_TOKEN=

# ----------------------------------------------------------------------------
# Economy & Payment Integration
# ----------------------------------------------------------------------------
# Economy Gateway
# ECONOMY_GATEWAY_ENDPOINT=https://economy.blackroad.io
# ECONOMY_GATEWAY_TOKEN=your-economy-token

# Stripe Payments
# STRIPE_SECRET_KEY=sk_live_xxxxx
# STRIPE_PUBLISHABLE_KEY=pk_live_xxxxx
# STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# ----------------------------------------------------------------------------
# Cloud Infrastructure
# ----------------------------------------------------------------------------
# AWS
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=AKIA...
# AWS_SECRET_ACCESS_KEY=...
# S3_BUCKET=blackroad-assets
# S3_REGION=us-east-1

# DigitalOcean Spaces
# SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
# SPACES_KEY=...
# SPACES_SECRET=...
# SPACES_BUCKET=blackroad

# ----------------------------------------------------------------------------
# CDN & Asset Delivery
# ----------------------------------------------------------------------------
# CDN_URL=https://cdn.blackroad.io
# STATIC_ASSET_URL=https://assets.blackroad.io

# ----------------------------------------------------------------------------
# Email Services
# ----------------------------------------------------------------------------
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your-sendgrid-api-key
# SMTP_FROM=noreply@blackroad.io

# ----------------------------------------------------------------------------
# Secrets Management
# ----------------------------------------------------------------------------
# Vault Configuration
# VAULT_ADDR=https://vault.blackroad.io:8200
# VAULT_TOKEN=your-vault-token
# VAULT_NAMESPACE=blackroad

# SOPS Configuration
# SOPS_KMS_ARN=arn:aws:kms:us-east-1:account:key/xxx
# SOPS_AGE_KEY_FILE=/etc/sops/age/keys.txt

# ----------------------------------------------------------------------------
# Deployment Metadata (Auto-populated by CI/CD)
# ----------------------------------------------------------------------------
# DEPLOYMENT_ID=deploy-20250109-1234
# GIT_COMMIT=abc123def456
# DEPLOY_TIMESTAMP=2025-01-09T12:34:56Z
# DEPLOYED_BY=github-actions

# ----------------------------------------------------------------------------
# Health Checks & Readiness
# ----------------------------------------------------------------------------
HEALTH_CHECK_INTERVAL_MS=30000
READINESS_TIMEOUT_MS=10000

# ----------------------------------------------------------------------------
# Performance & Scaling
# ----------------------------------------------------------------------------
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT_MS=30000
WORKER_THREADS=4

# ============================================================================
# End of Configuration
# ============================================================================
