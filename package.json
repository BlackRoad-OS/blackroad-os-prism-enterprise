{
  "name": "blackroad-prism-console",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo workspace for the BlackRoad Prism Console front-end.",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace frontend",
    "build": "npm run build --workspace frontend",
    "preview": "npm run preview --workspace frontend",
    "test": "npm run test --workspace frontend",
    "postinstall": "npm install --prefix frontend"
  }
}
