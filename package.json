{
  "name": "blackroad-prism-console",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo workspace for the BlackRoad Prism Console front-end and service demos.",
  "type": "commonjs",
  "main": "server_full.js",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "start": "node server_full.js",
    "dev": "nodemon server_full.js",
    "seed": "node scripts/seed_admin.js",
    "health": "node scripts/health.js",
    "test": "jest",
    "test:api": "node tests/smoke.test.mjs",
    "test:db": "node tests/test_db.js",
    "test:auth": "node tests/test_auth.js",
    "test:projects": "node tests/test_projects_tasks.js",
    "test:logs": "node tests/test_logs_contradictions.js",
    "lint": "eslint srv/blackroad-api/**/*.js tests/**/*.js",
    "format": "prettier -w .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "branch-cleanup:dry": "tsx tools/branch-cleanup/cleanup.ts --dry-run",
    "branch-cleanup:run": "tsx tools/branch-cleanup/cleanup.ts",
    "frontend:dev": "npm --prefix frontend run dev",
    "frontend:build": "npm --prefix frontend run build",
    "frontend:test": "npm --prefix frontend run test",
    "site:dev": "npm --prefix sites/blackroad run dev",
    "site:build": "npm --prefix sites/blackroad run build"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^9.4.3",
    "bs58": "^6.0.0",
    "compression": "^1.7.4",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ethers": "^6.10.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "ipfs-http-client": "^60.0.1",
    "json-canonicalize": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "socket.io": "^4.7.5",
    "stripe": "^12.18.0",
    "systeminformation": "^5.25.11",
    "uuid": "^9.0.1",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@octokit/core": "^6.1.2",
    "@octokit/plugin-paginate-graphql": "^5.2.4",
    "@octokit/plugin-throttling": "^9.3.2",
    "@types/node": "^22.9.0",
    "@typescript-eslint/parser": "^8.11.0",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.13",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "json2csv": "^6.0.0-alpha.2",
    "lint-staged": "^16.1.5",
    "nodemon": "^3.0.2",
    "p-limit": "^6.1.0",
    "prettier": "^3.3.3",
    "supertest": "^6.3.4",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "srv/blackroad-api/**/*.js": [
      "eslint --fix",
      "prettier -w"
    ],
    "tests/**/*.js": [
      "eslint --fix",
      "prettier -w"
    ],
    "*": "prettier -w --ignore-unknown"
  }
}
