{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://blackroad.io/schemas/keri-device-credentials.schema.json",
  "title": "KERI Device Credential",
  "description": "Verifiable credential envelope for device enrollment and calibration attested against a KERI identifier.",
  "type": "object",
  "oneOf": [
    { "$ref": "#/$defs/DeviceEnrollmentCredential" },
    { "$ref": "#/$defs/SensorCalibrationCredential" }
  ],
  "$defs": {
    "VerifiableCredentialBase": {
      "type": "object",
      "required": [
        "@context",
        "type",
        "issuer",
        "issuanceDate",
        "credentialSubject",
        "credentialStatus",
        "proof"
      ],
      "properties": {
        "@context": {
          "type": "array",
          "minItems": 1,
          "items": {
            "oneOf": [
              { "const": "https://www.w3.org/2018/credentials/v1" },
              { "const": "https://w3id.org/security/suites/jws-2020/v1" },
              { "type": "string", "format": "uri" }
            ]
          }
        },
        "type": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "issuer": {
          "type": "string",
          "description": "Issuer DID bound to a trusted KERI controller",
          "format": "uri"
        },
        "issuanceDate": {
          "type": "string",
          "format": "date-time"
        },
        "expirationDate": {
          "type": "string",
          "format": "date-time"
        },
        "credentialStatus": {
          "type": "object",
          "required": ["id", "type"],
          "properties": {
            "id": { "type": "string", "format": "uri" },
            "type": { "const": "StatusList2021Entry" },
            "statusPurpose": { "const": "revocation" },
            "statusListIndex": { "type": "string", "pattern": "^\\d+$" },
            "statusListCredential": { "type": "string", "format": "uri" }
          }
        },
        "proof": {
          "type": "object",
          "required": ["type", "created", "proofPurpose", "verificationMethod", "jws"],
          "properties": {
            "type": { "type": "string" },
            "created": { "type": "string", "format": "date-time" },
            "proofPurpose": { "type": "string", "enum": ["assertionMethod"] },
            "verificationMethod": { "type": "string", "format": "uri" },
            "jws": { "type": "string" }
          }
        }
      }
    },
    "DeviceEnrollmentCredential": {
      "allOf": [
        { "$ref": "#/$defs/VerifiableCredentialBase" },
        {
          "properties": {
            "type": {
              "contains": { "const": "VerifiableCredential" },
              "minItems": 2
            },
            "credentialSubject": {
              "type": "object",
              "required": ["id", "controller", "hardware", "policyVersion"],
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Device KERI identifier (AID)",
                  "pattern": "^did:keri:.*"
                },
                "controller": {
                  "type": "string",
                  "description": "Operator DID responsible for the device",
                  "format": "uri"
                },
                "hardware": {
                  "type": "object",
                  "required": ["manufacturer", "model", "serialNumber"],
                  "properties": {
                    "manufacturer": { "type": "string" },
                    "model": { "type": "string" },
                    "serialNumber": { "type": "string" },
                    "secureElement": { "type": "string" }
                  }
                },
                "policyVersion": { "type": "string" },
                "firmware": {
                  "type": "object",
                  "properties": {
                    "version": { "type": "string" },
                    "build": { "type": "string" }
                  }
                },
                "witnesses": {
                  "type": "array",
                  "items": { "type": "string", "format": "uri" }
                }
              }
            }
          }
        }
      ]
    },
    "SensorCalibrationCredential": {
      "allOf": [
        { "$ref": "#/$defs/VerifiableCredentialBase" },
        {
          "properties": {
            "type": {
              "contains": { "const": "SensorCalibrationCredential" }
            },
            "credentialSubject": {
              "type": "object",
              "required": ["id", "calibrationProfile", "validFrom"],
              "properties": {
                "id": {
                  "type": "string",
                  "pattern": "^did:keri:.*"
                },
                "calibrationProfile": {
                  "type": "object",
                  "required": ["name", "version"],
                  "properties": {
                    "name": { "type": "string" },
                    "version": { "type": "string" },
                    "checksum": { "type": "string" }
                  }
                },
                "validFrom": { "type": "string", "format": "date-time" },
                "validUntil": { "type": "string", "format": "date-time" },
                "tolerances": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["channel", "min", "max"],
                    "properties": {
                      "channel": { "type": "string" },
                      "min": { "type": "number" },
                      "max": { "type": "number" },
                      "unit": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      ]
    }
  }
}
