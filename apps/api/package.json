{
  "name": "blackroad-api",
  "version": "0.3.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx src/server.ts",
    "build": "tsc -p tsconfig.json && prisma generate || true",
    "start": "node dist/server.js",
    "migrate": "prisma migrate deploy || true",
    "migrate:dev": "prisma migrate dev --name init || true",
    "lint": "eslint . || true",
    "test": "node --test",
    "test:ci": "node --test --coverage",
    "test:e2e": "playwright test",
    "zap": "echo \"run zap scan (stub)\"",
    "audit": "npm audit || true",
    "test:metrics": "tsx test/metrics.spec.ts && tsx test/metrics.contract.ts"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/auto-instrumentations-node": "0.51.0",
    "@opentelemetry/exporter-metrics-otlp-http": "0.51.1",
    "@opentelemetry/exporter-trace-otlp-http": "0.51.1",
    "@opentelemetry/sdk-node": "0.51.1",
    "@prisma/client": "^5.17.0",
    "adm-zip": "^0.5.10",
    "ajv": "^8.12.0",
    "cookie": "^0.6.0",
    "cookie-parser": "^1.4.6",
    "cookie-signature": "^1.2.1",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.0",
    "express": "^4.19.2",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^10.2.0",
    "morgan": "^1.10.0",
    "mustache": "^4.2.0",
    "node-cache": "^5.1.2",
    "node-fetch": "^3.3.2",
    "openid-client": "^6.6.0",
    "stripe": "^16.0.0",
    "uuid": "^9.0.1",
    "web-push": "^3.6.6",
    "xmlbuilder2": "4.0.0",
    "yaml": "^2.5.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "eslint": "^9.0.0",
    "playwright": "^1.45.0",
    "prettier": "^3.3.3",
    "prisma": "^5.17.0",
    "semantic-release": "^24.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "build": "tsc -p tsconfig.json",
    "test": "NODE_PATH=./node_modules node --test"
  },
  "dependencies": {
    "@noble/ed25519": "^1.7.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "morgan": "^1.10.0",
    "pdfkit": "^0.15.0"
  },
  "devDependencies": {
    "tsx": "^4.7.0",
    "typescript": "^5.4.0"
  }
}
